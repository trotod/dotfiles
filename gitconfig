[include]
	path = ~/.gitconfig.local
[push]
	default = simple
[alias]
	co = checkout
	st = status
	l = log --graph --decorate --oneline -n 20
[core]
	editor = vim
	excludesfile = /home/me/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[merge]
	tool = vimdiff
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
