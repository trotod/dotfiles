# directory listings
alias ls='ls -hF --color=auto'
alias la='ls -A'
alias ll='ls -l'
alias l='ls -CF'
alias sl='ls'

# human numbers
alias df='df -h'
alias du='du -ch'

# for your safety...
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -I'

# grep colors
alias grep='grep --color'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# bundle
alias b='bundle'
alias be='bundle exec'

# source files
alias so='source'

# edit todo
alias todo='$EDITOR ~/.todo'

# shortcuts
alias e='$EDITOR'
alias v='vim'
