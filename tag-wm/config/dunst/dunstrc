[global]
  font = Sans 10
  allow_markup = yes
  plain_text = no
  format = "<span foreground="#20bbfc"><b>%s</b>\n</span>%b"
  sort = yes
  indicate_hidden = yes
  alignment = left
  bounce_freq = 0
  show_age_threshold = 60
  word_wrap = yes
  ignore_newline = no
  geometry = "300x5-10+10"
  shrink = no
  transparency = 0
  idle_threshold = 120
  monitor = 0
  follow = mouse
  sticky_history = yes
  history_length = 20
  show_indicators = yes
  line_height = 0
  notification_height = 0
  separator_height = 2
  padding = 8
  horizontal_padding = 8
  separator_color = frame
  startup_notification = false
  dmenu = /usr/bin/dmenu -p dunst:
  browser = /usr/bin/xdg-open
  icon_position = off
  icon_folders = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

[frame]
  width = 3
  color = "#d9d9d9"

[shortcuts]
  close = mod4+shift+space
  close_all = mod4+ctrl+space
  history = ctrl+grave
  context = mod4+shift+period

