#
# mpdconf
#

# General configuration.
music_directory "~/Music"
playlist_directory "~/.mpd/playlists"
db_file "~/.mpd/database"
pid_file "~/.mpd/pid"
state_file "~/.mpd/state"
sticker_file "~/.mpd/sticker.sql"

# Alsa (sound) output.
audio_output {
  type "alsa"
  name "My ALSA Device"
  mixer_type "software"
  auto_resample "no"
}

# Visualizer (for ncmpcpp).
audio_output {
  type "fifo"
  name "Visualizer feed"
  path "/tmp/mpd.fifo"
  format "44100:16:1"
}

# HTTP streaming.
audio_output {
  type "httpd"
  name "My HTTP Stream"
  encoder "lame"
  port "7700"
  bitrate "128"
  format "44100:16:1"
  tags "yes"
}
