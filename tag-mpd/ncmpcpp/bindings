#
# ncmpcpp/bindings
#

# vi keybindings

def_key "k"
  scroll_up

def_key "j"
  scroll_down

def_key "ctrl-b"
  page_up

def_key "ctrl-f"
  page_down

def_key "d"
  delete_playlist_items

def_key "d"
  delete_stored_playlist

def_key "l"
  next_column

def_key "h"
  previous_column

def_key "J"
  next

def_key "K"
  previous

# Remapping used keys

def_key "ctrl-l"
  toggle_lyrics_fetcher

def_key "L"
  toggle_screen_lock
