#
# ~/.config/sxhkd/sxhkdrc
#

# Terminal emulators

super + Return
  urxvtc

super + shift + Return
  sized-term

# Dmenu based applications

super + space
  dmenu_run

super + c
  dmenu_calc

super + p
  passmenu --type

# Volume control

XF86Audio{Lower,Raise}Volume
  amixer set Master 5%{-,+}

XF86AudioMute
  amixer set Master toggle

# Screenshots

Print
  scrot '%Y%m%d%H%M%S.png'

alt + Print
  scrot --focused '%Y%m%d%H%M%S.png'

# Applications

super + w
  chromium

super + z
  zathura
