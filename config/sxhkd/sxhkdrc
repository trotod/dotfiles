#
# ~/.config/sxhkd/sxhkdrc
#

# Lock

super + alt + shift + shift + l
  lock

# Terminal emulators

super + Return
  urxvtc

super + shift + Return
  sized-term

# Dmenu based applications

super + space
  dmenu_run

super + c
  dmenu_calc

super + p
  passmenu --type

# Volume control

XF86Audio{Lower,Raise}Volume
  vol 5%{-,+}

XF86AudioMute
  amixer set Master toggle

# Screenshots

Print
  scrot '%Y%m%d%H%M%S.png'

alt + Print
  scrot --focused '%Y%m%d%H%M%S.png'

# Music controls

XF86Audio{Prev,Play,Next}
  mpc -q {prev,toggle,next}

# Applications

super + w
  chromium

super + z
  zathura
