#
# bspwm hotkeys
#

# quit bspwm
super + alt + {_,shift + }Escape
  {bspc query -T > "$BSPWM_TREE"; \
    bspc query -H > "$BSPWM_HISTORY"; \
      pkill -x panel; bspc quit,\
  pkill -x panel; bspc quit 1}

# close window
super + shift + x
  bspc window --close

# kill window
super + ctrl + shift + x
  bspc window --kill

# cycle between desktops
super + t
  bspc desktop --layout next

# balance windows
super + b
  bspc desktop --balance

# equalize windows
super + shift + b
  bspc desktop --equalize

# toggle pseudo_tiled, floating and fullscreen
super + {p,s,f}
  bspc window --toggle {pseudo_tiled,floating,fullscreen}

# switch to last window or desktop
super + {backslash,grave}
  bspc {window,desktop} --focus last

# swap with last window
super + apostrophe
  bspc window --swap last

# record history
super + {o,i}
  bspc control --record-history off; \
  bspc window {older,newer} --focus; \
  bspc control --record-history on

# move window to presel
super + y
  bspc window --to-window last.manual

# swap with biggest window
super + m
  bspc window --swap biggest

# focus or swap with window [in dir]
super + {_,shift + }{h,j,k,l}
  bspc window --{focus,swap} {left,down,up,right}

# cycle through windows
super + {_,shift + }Tab
  bspc window --focus {next,prev}

# rotate the windows of a desktop
super + {comma,period}
  bspc desktop --circulate {backward,forward}

# cycle through the desktops
super + bracket{left,right}
  bspc desktop --focus {prev,next}

# presel
super + ctrl + {h,j,k,l}
  bspc window --presel {left,down,up,right}

# cancel presel
super + ctrl + {_,shift + }space
  bspc {window --presel cancel,desktop --cancel-presel}

# resize windows
super + alt + {h,j,k,l}
  bspc window --edge {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
  bspc window --edge {right -10,up +10,down -10,left +10}

# floating mode
super + alt + m : {h,j,k,l}
  xdo move {-x -10,-y +10,-y -10,-x +10}

super + shift + m : {h,j,k,l}
  xdo resize {-w -10,-h -10,-h +10,-w +10}

# set splitting ratio, (0 is golden ratio ish)
super + ctrl + {1-9,0}
  bspc window --ratio 0.{1-9,618}

# follow or send window to desktop
super + {_,shift + }{1-9,0}
  bspc {desktop --focus,window --to-desktop} ^{1-9,10}

# like win+d on windows
super + d
  bspc control --toggle-visibility

~button1
  bspc pointer --grab focus

super + button{1-3}
  bspc pointer --grab {move,resize_side,resize_corner}

super + !button{1-3}
  bspc pointer --track %i %i

super + @button{1-3}
  bspc pointer --ungrab

#
# wm independent hotkeys
#

super + Return
  urxvtc

super + space
  dmenu_run

super + c
  dmenu_calc

super + w
  firefox

super + z
  zathura

# I run Arch Linux inside Virtualbox, and the function keys dont work, so...
super + F6
  mpc prev

super + F7
  mpc toggle

super + F8
  mpc next

super + ctrl + x
  pkill -f x11grab

# screenshot
Print
  scrot '%Y%m%d%H%M%S.png'

alt + Print
  scrot --focused '%Y%m%d%H%M%S.png'

ctrl + q
  echo "WARNING: YOU ARE PRESSING CTRL-Q" | dmenu


# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd
