# directory listings
alias ls='ls -hF --color=auto --group-directories-first'
alias la='ls -A'
alias ll='ls -l'
alias l='ls'
alias sl='ls'

# human numbers
alias df='df -h'
alias du='du -ch'

# for your safety...
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# grep colors
alias grep='grep --color'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# bundle
alias b='bundle'
alias be='bundle exec'

# source files
alias so='source'

# edit todo
alias todo='eval $EDITOR ~/.todo'

# shortcuts
alias e='eval $EDITOR'
alias vim='nvim'

# ping
alias ping='ping -c3'

# git
alias ga='git add'
alias gc='git commit'
alias gca='git commit -a'
alias gcm='git commit -m'
alias gcam='git commit -am'

# clear
alias c='clear'
