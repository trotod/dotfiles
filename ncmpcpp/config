# colors
# 0 is default, 1 - 8 is black - white; 9 is reset
# redgreenyellowbluemagentacyan
# brgybmcw

# song format %[letter]
# l length
# f fname
# d dirname
# a artist
# A album artist
# t title
# b album
# y date
# n track number (01)
# N full track info (01/12)
# g genre
# c composer
# p performer
# d disc
# C comment
# P priority
# R right align

mpd_music_dir = "~/Music"
mpd_crossfade_time = "5"

