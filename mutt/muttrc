#
# ~/.mutt/muttrc
#

source "gpg -dq $HOME/.mutt/passwords.gpg |"

source $HOME/.mutt/gpg.rc
source $HOME/.mutt/colors/pencil

set realname = 'David Liu'
set my_user = 'a.davidliu'

# Accounts
set imap_user = $my_user@gmail.com
set imap_pass = $my_pass
set from = $my_user@gmail.com
set use_from = yes

# IMAP + SMTP
set folder = imaps://imap.gmail.com/
set spoolfile = +INBOX
mailboxes +INBOX
set postponed = +[GMAIL]/Drafts
unset imap_passive
set imap_keepalive = 300
set mail_check = 120
unset record
set ssl_force_tls = yes
set ssl_starttls = yes
set smtp_url=smtps://$my_user:$my_pass@smtp.gmail.com

# Cache
set header_cache = ~/.cache/mutt
set message_cachedir = ~/.cache/mutt

# GPG

#set pgp_use_gpg_client = yes
set pgp_sign_as = 6E27F918
set pgp_timeout = 3600
set crypt_autosign = no
set crypt_replyencrypt = yes

bind compose p pgp-menu
macro compose Y pfy "send mail without GPG"
